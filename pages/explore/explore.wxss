page{
  background-color: #f6f6f6;
}
.title{
  color: #5c5c5c;
  font-size: 30rpx;
  margin: 20rpx;
}
.list{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 50rpx;
}
.poi{
  position: relative;
  margin-bottom: 12rpx;
}
.poi image{
  width: 349rpx;
  height: 349rpx;
  border-radius: 8rpx;
  vertical-align: bottom;
}
.poi .mask{
  width: 100%;
  height: 80rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-image: linear-gradient(to top, rgba(0,0,0,.8), rgba(0,0,0,0));
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.poi .name{
  position: absolute;
  left: 28rpx;
  bottom: 24rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}
