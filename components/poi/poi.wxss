.m-poi{
  position: relative;
}
.m-poi .cover{
  width: 190rpx;
  height: 190rpx;
  border-radius: 8rpx;
  float: left;
  margin-right: 20rpx;
  background-color: #E7DDC7;
}
.m-poi .label{
  position: absolute;
  left: -2rpx;
  top: 20rpx;
  width: 57rpx;
  height: 37rpx;
}
.m-poi .info{
  height: 190rpx;
  overflow: hidden;
  position: relative;
}
.m-poi .title{
  font-size: 34rpx;
  line-height: 34rpx;
  font-weight: bold;
}
.m-poi .rating{
  color: #999;
  font-size: 22rpx;
  margin-top: 10rpx;
}
.m-poi .rating image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 7rpx;
}
.m-poi .m-rating{
  display: inline-block;
  vertical-align: middle;
}
.m-poi .rating .count{
  margin-left: 10rpx;
}
.m-poi .desc{
  color: #5c5c5c;
  font-size: 24rpx;
  margin-top: 5rpx;
  line-height: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.m-poi .detail{
  color: #999;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 22rpx;
}
